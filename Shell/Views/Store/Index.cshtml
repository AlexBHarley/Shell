@model Shell.ViewModels.StoreFrontViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Shell</h2>

<div class="row">

    <div class="col-md-8">

        @foreach (var category in Model.Categories)
        {
            <div class="col-md-3">
                <h4>
                    @Html.ActionLink(@category.Name, "Details")
                </h4>

            </div>

        }


    </div>

    <div class="col-md-4">

        <img src="http://i.imgur.com/vihxsPv.jpg"/>

    </div>


</div>

<div>
    
    @{ Html.RenderPartial("_LatestListings", Model.LatestListings); }
</div>
